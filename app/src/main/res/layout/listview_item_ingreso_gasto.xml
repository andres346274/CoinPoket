<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color50">


    <TextView
        android:id="@+id/id_textView_fecha_ingreso_gasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color100"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        android:text="TextView">
    </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_imageView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                app:srcCompat="@drawable/emoji_gasto">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_textView_catidad_ingreso_gasto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_textView_ingreso_gasto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title">
                    </TextView>

                    <TextView
                        android:id="@+id/id_textView_concepto_ingreso_gasto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="TextView"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="16sp">
                    </TextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/id_textView_localización_ingreso_gasto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Localización no especificada"
                    android:gravity="left"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="16sp">
                </TextView>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>