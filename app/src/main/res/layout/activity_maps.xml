<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color50"
    android:orientation="vertical">

    <Button
        android:id="@+id/id_button_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="devolverLocalizacion"
        android:text="Añadir esta ubicación"
        android:background="@drawable/button_simple_config"
        android:textColor="@color/color50"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.uc3m.it.CoinPocket.MapsActivity" />

</LinearLayout>
