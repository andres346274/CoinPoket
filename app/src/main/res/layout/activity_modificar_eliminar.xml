<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color50"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id_concepto_modificar_eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:hint="Sin concepto."
            android:textSize="14sp"
            ></EditText>

        <TextView
            android:id="@+id/id_fecha_modificar_eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:inputType="numberDecimal"
            android:hint="Fecha desconocida (pulsar para aÃ±adir)."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_positivo_negativo_modificar_eliminar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                ></TextView>
            <EditText
                android:id="@+id/id_cantidad_modificar_eliminar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:paddingLeft="10dp"
                android:gravity="top|left"
                android:inputType="numberDecimal"
                android:hint="No se ha indicado importe."
                android:textSize="14sp"
                ></EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/id_localizacion_modificar_eliminar"
                android:layout_width="match_parent"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:gravity="top|left"
                android:inputType="numberDecimal"
                android:hint="Localizacion no registrada."
                android:textSize="14sp"
                ></EditText>

            <Button
                android:id="@+id/id_button_modificar_localizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_simple_config"
                android:textColor="@color/color50"
                android:text="Modificar Localizacion"
                android:textSize="14sp"
                ></Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_modificar_gasto_concreto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_simple_config"
            android:textColor="@color/color50"
            android:text="Modificar"
            android:textSize="14sp"
            ></Button>

        <Button
            android:id="@+id/id_eliminar_gasto_concreto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_simple_config"
            android:textColor="@color/color50"
            android:text="Eliminar"
            android:textSize="14sp"
            ></Button>
    </LinearLayout>

</LinearLayout>