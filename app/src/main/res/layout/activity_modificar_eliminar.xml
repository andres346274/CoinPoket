<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color50"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/concepto_modificar_eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:hint="Sin concepto."
            android:textSize="14sp"
            ></EditText>

        <EditText
            android:id="@+id/cantidad_modificar_eliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="top|left"
            android:inputType="numberDecimal"
            android:hint="No se ha indicado importe."
            android:textSize="14sp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/modificar_gasto_concreto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_simple_config"
            android:textColor="@color/color50"
            android:text="Modificar"
            android:textSize="14sp"
            ></Button>

        <Button
            android:id="@+id/eliminar_gasto_concreto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_simple_config"
            android:textColor="@color/color50"
            android:text="Eliminar"
            android:textSize="14sp"
            ></Button>
    </LinearLayout>

</LinearLayout>